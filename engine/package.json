{
  "name": "veganflemme-engine",
  "version": "1.0.0",
  "description": "VeganFlemme API Engine - Nutrition and menu generation backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "echo 'Build completed successfully'",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "verify-types": "./scripts/verify-types.sh",
    "build:verified": "./scripts/verify-types.sh && npm run build",
    "build:render": "./scripts/build-render.sh",
    "build:production": "npm ci --production=false && npm run build:verified",
    "verify-deployment": "./scripts/verify-deployment.sh"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "vegan",
    "nutrition",
    "api",
    "nodejs",
    "express",
    "anses",
    "rnp"
  ],
  "author": "VeganFlemme",
  "license": "MIT"
}
